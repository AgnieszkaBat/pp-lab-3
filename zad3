package geometry;

public class Point {
    private double x;
    private double y;

    // Konstruktor
    public Point(double x, double y) {
        this.x = x;
        this.y = y;
    }

    // Metoda zwracająca wartość pola x
    public double getX() {
        return x;
    }

    // Metoda zwracająca wartość pola y
    public double getY() {
        return y;
    }

    // Metoda ustawiająca wartość pola x
    public void setX(double x) {
        this.x = x;
    }

    // Metoda ustawiająca wartość pola y
    public void setY(double y) {
        this.y = y;
    }
}
package geometry;

public class Circle {
    private Point center;
    private double radius;

    // Konstruktor
    public Circle(Point center, double radius) {
        this.center = center;
        this.radius = radius;
    }

    // Metoda zwracająca wartość pola center
    public Point getCenter() {
        return center;
    }

    // Metoda zwracająca wartość pola radius
    public double getRadius() {
        return radius;
    }

    // Metoda obliczająca obwód koła
    public double calculatePerimeter() {
        return 2 * Math.PI * radius;
    }

    // Metoda zwracająca pole powierzchni koła
    public double getArea() {
        return Math.PI * radius * radius;
    }
}
package geometry;

public class Main {
    public static void main(String[] args) {
        // Tworzenie obiektu klasy Point
        Point center = new Point(0, 0);
        double radius = 5.0;

        // Tworzenie obiektu klasy Circle
        Circle circle = new Circle(center, radius);

        // Wyświetlanie właściwości koła
        System.out.println("Właściwości koła:");
        System.out.println("Center: (" + circle.getCenter().getX() + ", " + circle.getCenter().getY() + ")");
        System.out.println("Radius: " + circle.getRadius());
        System.out.println("Perimeter: " + circle.calculatePerimeter());
        System.out.println("Area: " + circle.getArea());
    }
}

package geometry;

public class ColoredCircle extends Circle {
    private String color;

    // Konstruktor
    public ColoredCircle(Point center, double radius, String color) {
        super(center, radius);
        this.color = color;
    }

    // Metoda zwracająca wartość pola color
    public String getColor() {
        return color;
    }
}
package geometry;

public class Main {
    public static void main(String[] args) {
        // Tworzenie obiektu klasy Point
        Point center = new Point(0, 0);
        double radius = 5.0;
        String color = "Red"; // Example color

        // Tworzenie obiektu klasy ColoredCircle
        ColoredCircle coloredCircle = new ColoredCircle(center, radius, color);

        // Wyświetlanie właściwości kolorowego koła
        System.out.println("Właściwości kolorowego koła:");
        System.out.println("Center: (" + coloredCircle.getCenter().getX() + ", " + coloredCircle.getCenter().getY() + ")");
        System.out.println("Radius: " + coloredCircle.getRadius());
        System.out.println("Color: " + coloredCircle.getColor());
        System.out.println("Perimeter: " + coloredCircle.calculatePerimeter());
        System.out.println("Area: " + coloredCircle.getArea());
    }
}
